{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":semanticCommits"
  ],
  "schedule": ["* * * * 0"],
  "automerge": false,
  "prCreation": "immediate",
  "automergeStrategy": "squash",
  "forkProcessing": "enabled",
  "ignorePaths": [
    "**/.devcontainer/**",
    "**/.github/**",
    "**/Dockerfile",
    "**/releases/**"
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "helm","docker"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "lockFileMaintenance": {
        "enabled": true
      },
      "groupName": "all non-major Helm/Docker dependencies ({{ lookup (split (lowercase releaseTimestamp) 't') 0 }})",
      "groupSlug": "chore/all-minor-patch-helm-{{ lookup (split (lowercase releaseTimestamp) 't') 0 }}"
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "enabled": false
    }
  ],
  "customManagers": [
    {
      "customType": "jsonata",
      "fileFormat": "yaml",
      "managerFilePatterns": [
        "/(^|/)roles/bootstrap/defaults/_version.yaml$/"
      ],
      "matchStrings": [
        "$each(helm_chart_version, function($v, $k) {{'depName':$k, 'packageName': ($contains($v.repository, 'oci://'))?($replace($v.repository, 'oci://', '') & '/' & $k):$k, 'datasource': ($contains($v.repository, 'oci://'))?'docker':'helm', 'currentValue': $v.version, 'registryUrl': ($contains($v.repository, 'oci://'))?'':$v.repository}})"
      ]
    },
    {
      "customType": "jsonata",
      "fileFormat": "yaml",
      "managerFilePatterns": [
        "/(^|/)roles/bootstrap/defaults/_version.yaml$/"
      ],
      "matchStrings": [
        "$each(container_image_version, function($v, $k) {{'packageName': $k , 'currentValue': $v.version}})"
      ],
      "datasourceTemplate": "docker"
    }
  ]
}